@model TBA.Models.Entities.Label
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Label</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <form asp-action="Create" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter label name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Color" class="form-label">Color</label>
                <div class="input-group">
                    <input type="color" class="form-control form-control-color"
                           id="colorPicker" value="#0088ff"
                           oninput="document.getElementById('Color').value=this.value" />
                    <input asp-for="Color" class="form-control" id="Color" placeholder="#RRGGBB"
                           oninput="document.getElementById('colorPicker').value=this.value" />
                </div>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Create</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-link">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
 await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
