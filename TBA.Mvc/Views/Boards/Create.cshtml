@model TBA.Mvc.Models.BoardCreateViewModel
@{
    ViewData["Title"] = "Create Board";
}
<div class="container mt-4">
    <div class="card shadow rounded-3">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create Board</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>

                <hr />
                <h5>Lists</h5>
                <div id="lists"></div>
                <button type="button" class="btn btn-outline-secondary btn-sm mb-3" id="add-list">+ Add list</button>
                <div class="text-muted small mb-3">Add Lists (ex. “To do”, “In Progress”, “Done”…).</div>

                <h5 class="mt-3">Members (emails)</h5>
                <textarea asp-for="MemberEmail" class="form-control" placeholder="one@mail.com, two@mail.com"></textarea>
                <small class="text-muted">The user must be registered.</small>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary me-2">Save</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function(){
          const btn = document.getElementById('add-list');
          const container = document.getElementById('lists');
          let idx = 0;

          function addRow(name = "", pos = "") {
            const row = document.createElement('div');
            row.className = "row g-2 mb-2";
            row.innerHTML = `
              <div class="col">
                <input name="Lists[${idx}].Name" class="form-control" placeholder="List name" value="${name}">
              </div>
              <div class="col-3">
                <input type="number" name="Lists[${idx}].Position" class="form-control" placeholder="Position" value="${pos}">
              </div>
              <div class="col-1 d-flex align-items-center">
                <button type="button" class="btn btn-sm btn-outline-danger remove">x</button>
              </div>`;
            container.appendChild(row);
            row.querySelector('.remove').addEventListener('click', ()=> row.remove());
            idx++;
          }

          addRow();

          btn?.addEventListener('click', () => addRow());
        })();
    </script>
}
