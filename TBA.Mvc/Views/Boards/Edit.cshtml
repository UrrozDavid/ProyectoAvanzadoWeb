@model TBA.Mvc.Models.BoardEditViewModel
@{
    ViewData["Title"] = "Edit Board";
}

<div class="container my-4" style="max-width: 980px;">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white fw-semibold">Edit Board</div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="BoardId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                </div>

                <hr />
                <h6 class="mb-2">Lists</h6>

                <div id="lists-container" class="vstack gap-2">
                    @for (int i = 0; i < Model.Lists.Count; i++)
                    {
                        <div class="border rounded p-2 d-flex gap-2 align-items-center">
                            <input type="hidden" asp-for="Lists[@i].ListId" />
                            <div class="flex-fill">
                                <input asp-for="Lists[@i].Name" class="form-control" placeholder="List name" />
                                <span asp-validation-for="Lists[@i].Name" class="text-danger"></span>
                            </div>
                            <div style="width: 110px;">
                                <input asp-for="Lists[@i].Position" class="form-control" placeholder="Pos" />
                            </div>
                            <div class="form-check ms-2">
                                <input class="form-check-input" asp-for="Lists[@i].Remove" />
                                <label class="form-check-label">Remove</label>
                            </div>
                        </div>
                    }
                </div>

                <button type="button" id="add-list" class="btn btn-sm btn-outline-primary mt-2">+ Add list</button>

                <hr />
                <h6 class="mb-2">Add members (emails)</h6>
                <input asp-for="MemberEmailsToAdd" class="form-control" placeholder="one@mail.com, two@mail.com" />

                @if (Model.CurrentMembers?.Any() == true)
                {
                    <div class="mt-2 small text-muted">
                        Current: @string.Join(", ", Model.CurrentMembers.Select(m => m.Username))
                    </div>
                }

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function(){
            const container = document.getElementById('lists-container');
            const addBtn = document.getElementById('add-list');
            let index = @Model.Lists.Count;

            addBtn.addEventListener('click', () => {
                const div = document.createElement('div');
                div.className = 'border rounded p-2 d-flex gap-2 align-items-center';
                div.innerHTML = `
                    <input type="hidden" name="Lists[${index}].ListId" value="" />
                    <div class="flex-fill">
                        <input name="Lists[${index}].Name" class="form-control" placeholder="List name" />
                    </div>
                    <div style="width:110px;">
                        <input name="Lists[${index}].Position" class="form-control" placeholder="Pos" value="${index+1}" />
                    </div>
                    <div class="form-check ms-2">
                        <input class="form-check-input" type="checkbox" name="Lists[${index}].Remove" />
                        <label class="form-check-label">Remove</label>
                    </div>`;
                container.appendChild(div);
                index++;
            });
        })();
    </script>
}
