@model TBA.Models.Entities.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <h2 class="mb-4 text-danger">Confirm Delete</h2>
    <h5>Are you sure you want to delete this user?</h5>

    <div class="card shadow-sm my-4 p-3">
        <h4 class="mb-3">User Details</h4>
        <dl class="row">
            <dt class="col-sm-3 fw-semibold">
                @Html.DisplayNameFor(model => model.Username)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Username)
            </dd>

            <dt class="col-sm-3 fw-semibold">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3 fw-semibold">
                @Html.DisplayNameFor(model => model.PasswordHash)
            </dt>
            <dd class="col-sm-9 text-muted fst-italic">
                @Html.DisplayFor(model => model.PasswordHash)
            </dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="UserId" />
            <button type="submit" class="btn btn-danger me-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
