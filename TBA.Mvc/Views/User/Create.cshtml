@model TBA.Models.Entities.User

@{
    ViewData["Title"] = "Create User";
}

<div class="container mt-5">
    <h2 class="mb-4">Create New User</h2>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" placeholder="Enter username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="PasswordHash" class="form-label"></label>
                    <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Create</button>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-link">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
