@model TBA.Mvc.Models.CardCreateViewModel

<div class="container mt-5" style="max-width: 1100px;">
    <h2 class="mb-4 text-center">Create Card</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="BoardId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="DueDate" class="form-label"></label>
            <input asp-for="DueDate" type="datetime-local" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="ListId" class="form-label"></label>
            <select asp-for="ListId" asp-items="Model.Lists" class="form-select">
                <option value="">-- Select List --</option>
            </select>
            <span asp-validation-for="ListId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AssigneeUserId" class="form-label"></label>
            <select asp-for="AssigneeUserId" asp-items="Model.Members" class="form-select">
                <option value="">-- Unassigned --</option>
            </select>
        </div>

        
        <div class="mb-4">
            <label asp-for="SelectedLabelId" class="form-label">Label</label>
            <select asp-for="SelectedLabelId" asp-items="Model.LabelOptions" class="form-select">
                <option value="">-- Select Label --</option>
            </select>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Tasks" asp-action="Index" asp-route-boardId="@Model.BoardId"
               class="btn btn-outline-secondary ms-2">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
