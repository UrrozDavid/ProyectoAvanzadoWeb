@model TBA.Models.Entities.Card

@{
    ViewData["Title"] = "Detalles de la Tarjeta";
}

<h1 class="mb-4">Detalles de la Tarjeta</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Título:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3">Descripción:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3">Fecha de creación:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

            <dt class="col-sm-3">Fecha de vencimiento:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DueDate)</dd>

            <dt class="col-sm-3">Lista:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.List.Name)</dd>
        </dl>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.CardId" class="btn btn-primary me-2">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
