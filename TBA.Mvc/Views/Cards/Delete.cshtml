@model TBA.Models.Entities.Card

@{
    ViewData["Title"] = "Eliminar Tarjeta";
}

<h1 class="text-danger">Eliminar Tarjeta</h1>

<h4 class="mb-3">¿Estás seguro de que deseas eliminar esta tarjeta?</h4>

<div class="card border-danger mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">Título</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3 font-weight-bold">Descripción</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3 font-weight-bold">Fecha de creación</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

            <dt class="col-sm-3 font-weight-bold">Fecha límite</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DueDate)</dd>

            <dt class="col-sm-3 font-weight-bold">Lista</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.List.Name)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="CardId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Cancelar</a>
</form>
