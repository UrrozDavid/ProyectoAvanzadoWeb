@model TBA.Models.DTOs.TaskViewModel

<div class="card border shadow-sm rounded-3 mb-3">
    <div class="card-body">
        <h6 class="fw-semibold text-dark mb-1">@Model.Title</h6>
        <p class="text-muted mb-2">@Model.Description</p>

        <div class="d-flex justify-content-between small text-muted mb-2">
            <span>Status: <span class="text-uppercase fw-semibold">@Model.ListName</span></span>
            <span>Assigned to: <span class="fw-semibold">@Model.AssignedUserName</span></span>
        </div>

        @if (Model.DueDate.HasValue)
        {
            <p class="text-danger small mb-3">Due date: @Model.DueDate.Value.ToString("dd/MM/yyyy")</p>
        }

        @if (Model.ListName == "TO DO")
        {
            <form asp-action="UpdateStatus" method="post" class="mb-0">
                <input type="hidden" name="cardId" value="@Model.CardId" />
                <input type="hidden" name="newListId" value="2" />
                <button type="submit" class="btn btn-outline-warning btn-sm">Mark as IN PROGRESS</button>
            </form>
        }
        else if (Model.ListName == "IN PROGRESS")
        {
            <form asp-action="UpdateStatus" method="post" class="mb-0">
                <input type="hidden" name="cardId" value="@Model.CardId" />
                <input type="hidden" name="newListId" value="3" />
                <button type="submit" class="btn btn-outline-success btn-sm">Mark as DONE</button>
            </form>
        }
    </div>
    <div class="card-checklist" data-card-id="@Model.CardId">
        <button class="btn btn-sm btn-link toggle-checklist">
            ✅ @Model.ChecklistDone / @Model.ChecklistTotal
            <span class="ms-1">&#9660;</span>
        </button>
        <ul class="checklist-items list-unstyled d-none">
        </ul>
        <div class="add-checklist-item d-none mt-2">
            <input type="text" class="form-control form-control-sm new-check-item" placeholder="Nueva subtarea…">
            <button class="btn btn-sm btn-primary mt-1 add-item-btn">Agregar</button>
        </div>
    </div>
    <div class="card-comments mt-2" data-card-id="@Model.CardId">
        <button class="btn btn-sm btn-link toggle-comments">
            💬 @Model.CommentsCount
        </button>
        <div class="comments-list list-group d-none mb-2"></div>
        <div class="add-comment d-none">
            <textarea class="form-control form-control-sm new-comment" rows="2"
                      placeholder="Escribe un comentario…"></textarea>
            <button class="btn btn-sm btn-primary mt-1 add-comment-btn">Comentar</button>
        </div>
    </div>


</div>
