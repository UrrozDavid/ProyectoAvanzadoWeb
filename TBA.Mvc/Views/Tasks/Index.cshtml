@using TBA.Models.DTOs
@model List<TaskViewModel>

@{
    var username = ViewBag.Username?.ToLower();
    var userTasks = Model.Where(m => m.AssignedUserName?.ToLower() == username).ToList();
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>My Tasks</h4>
        <a asp-controller="Tasks" asp-action="Create" class="btn btn-success">Add New</a>
    </div>

    <div class="card">
        <div class="card-body">
            @if (userTasks.Any())
            {
                foreach (var task in userTasks)
                {
                    <div class="row mb-3 border-bottom pb-2">
                        <div class="col-md-6">
                            <input type="checkbox" class="form-check-input me-2" />
                            <strong>@task.Title</strong><br />
                            <small class="text-muted">@task.Description</small>
                        </div>
                        <div class="col-md-6 text-end">
                            <small>
                                <i class="uil uil-schedule"></i> @task.DueDate?.ToShortDateString() @task.DueDate?.ToShortTimeString()
                                <i class="uil uil-comment-message ms-3"></i> @task.CommentsCount
                                <span class="badge bg-primary ms-2">@task.Priority</span>
                            </small>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No assigned tasks.</p>
            }
        </div>
    </div>
</div>
