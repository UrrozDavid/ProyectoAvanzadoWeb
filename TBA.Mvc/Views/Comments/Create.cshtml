@model TBA.Models.Entities.Comment

@{
    ViewData["Title"] = "Create Comment";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Create Comment</h2>

    <div class="card shadow-sm rounded-4">
        <div class="card-body">
            <form asp-action="Create">
                <div class="mb-3">
                    <label asp-for="CardId" class="form-label fw-semibold"></label>
                    <select asp-for="CardId" class="form-select" asp-items="ViewBag.CardId"></select>
                    <span asp-validation-for="CardId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UserId" class="form-label fw-semibold"></label>
                    <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CommentText" class="form-label fw-semibold"></label>
                    <input asp-for="CommentText" class="form-control" />
                    <span asp-validation-for="CommentText" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Back to List</a>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
